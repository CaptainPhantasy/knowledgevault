  "shortcuts": [
    {
      "name": "Create Knowledge",
      "short_name": "Create",
      "description": "Create a new knowledge entry",
      "url": "/?view=create",
      "icons": [
        {
          "src": "assets/icons/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search Knowledge",
      "short_name": "Search",
      "description": "Search your knowledge base",
      "url": "/?view=search",
      "icons": [
        {
          "src": "assets/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Explore Map",
      "short_name": "Explore",
      "description": "Explore knowledge on map",
      "url": "/?view=explore",
      "icons": [
        {
          "src": "assets/icons/shortcut-explore.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Export Data",
      "short_name": "Export",
      "description": "Export and backup knowledge",
      "url": "/?view=export",
      "icons": [
        {
          "src": "assets/icons/shortcut-export.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt", ".md"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+knowledgevault",
      "url": "/?import=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  "prefer_related_applications": false,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "permissions": [
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  "features": [
    "Cross Platform",
    "Fast",
    "Offline",
    "Installable"
  ]
}